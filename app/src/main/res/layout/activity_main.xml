<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menu"
        android:textSize="18sp"
        android:layout_marginBottom="8dp" />

    <CheckBox
        android:id="@+id/cb_item1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Burger ($5)"
        android:textSize="16sp" />

    <CheckBox
        android:id="@+id/cb_item2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pizza ($8)"
        android:textSize="16sp" />

    <CheckBox
        android:id="@+id/cb_item3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pasta ($7)"
        android:textSize="16sp" />

    <CheckBox
        android:id="@+id/cb_item4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salad ($4)"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate Bill"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/tv_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Amount: $0"
        android:textSize="16sp"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/tv_discount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discount: $0"
        android:textSize="16sp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/tv_final_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Final Amount: $0"
        android:textSize="16sp"
        android:layout_marginTop="8dp" />


</LinearLayout>